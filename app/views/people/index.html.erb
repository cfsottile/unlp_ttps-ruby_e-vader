<p id="notice"><%= notice %></p>

<h1><%= t("listing_people") %></h1>

<table>
  <thead>
    <tr>
      <th><%= t("active_record.attributes.person.name") %></th>
      <th><%= t("active_record.attributes.client.cuilt") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.cuilt %></td>
        <td><%= link_to t("show"), person %></td>
        <td><%= link_to t("edit"), edit_person_path(person) %></td>
        <td><%= link_to t("destroy"), person, method: :delete, data: { confirm: t("are_you_sure") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

