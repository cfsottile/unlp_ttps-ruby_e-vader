<p id="notice"><%= notice %></p>

<h1><%= t("listing_clients") %></h1>

<table>
  <thead>
    <tr>
      <th><%= t("active_record.attributes.client.first_name") %></th>
      <th><%= t("active_record.attributes.client.last_name") %></th>
      <th><%= t("active_record.attributes.client.document_number") %></th>
      <th><%= t("active_record.attributes.client.gender") %></th>
      <th><%= t("active_record.attributes.client.birthday") %></th>
      <th><%= t("active_record.attributes.client.cuilt") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.first_name %></td>
        <td><%= client.last_name %></td>
        <td><%= client.document_number %></td>
        <td><%= t("active_record.attributes.client.genders.#{client.gender}") %></td>
        <td><%= client.birthday %></td>
        <td><%= client.cuilt %></td>
        <td><%= link_to t("active_record.models.invoices"), client_invoices_path(client) %></td>
        <td><%= link_to t("show"), client %></td>
        <td><%= link_to t("edit"), edit_client_path(client) %></td>
        <td><%= link_to t("destroy"), client, method: :delete, data: { confirm: t("are_you_sure") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

