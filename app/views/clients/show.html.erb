<p id="notice"><%= notice %></p>

<h1><%= Client.model_name.human %></h2>

<h2><%= t :personal_info %></h2>
<p>
  <strong>First name:</strong>
  <%= @client.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @client.last_name %>
</p>

<p>
  <strong>Document number:</strong>
  <%= @client.document_number %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @client.gender %>
</p>

<p>
  <strong>Birthday:</strong>
  <%= @client.birthday %>
</p>

<p>
  <strong>CUIL/CUIT:</strong>
  <%= @client.cuilt %>
</p>

<%= link_to 'Edit', edit_client_path(@client) %>

<h2><%= t :contact_info %></h2>
<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @client.contacts.each do |contact| %>
      <tr>
        <td><%= contact.kind %></td>
        <td><%= contact.value %></td>
        <td><%= link_to 'Show', client_contact_path(@client, contact) %></td>
        <td><%= link_to 'Edit', edit_client_contact_path(@client, contact) %></td>
        <td><%= link_to 'Destroy', client_contact_path(@client, contact), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Contact', new_client_contact_path(@client) %><br><br>

<%= link_to 'Back', clients_path %>
